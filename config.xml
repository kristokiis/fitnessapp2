
<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "ee.efley.fitnessmobile"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>FitnessMobile</name>

    <description>
        Makes you fit
    </description>

    <author href="https://www.efley.ee" email="info@efley.ee">
        Efley
    </author>
    
    <access origin="*" />
    
    <preference name="phonegap-version" value="2.7.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="handset" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce" 	value="false" />
    
    <gap:plugin name="ChildBrowser" />
	<gap:plugin name="Analytics" /> <!-- latest release -->
	
	<gap:plugin name="FacebookConnect">
		<param name="APP_ID" value="161092774064906" />
	</gap:plugin>
    
    <feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
    
    <icon src="assets/sparta_ico.png" />

    <gap:splash src="assets/android/splash.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="assets/android/splash.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="assets/android/splash.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="assets/android/splash.png" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="assets/ios/splash.png"    	gap:platform="ios"	width="320" height="480" />
    <gap:splash src="assets/ios/splash.png" 	gap:platform="ios"	width="640" height="960" />
    <gap:splash src="assets/ios/splash.png" 	gap:platform="ios"	width="640" height="960" />
    <gap:splash src="assets/ios/Default-568h@2x.png" 			gap:platform="ios"	width="640" height="1136" />
    
    <gap:splash src="assets/ios/splash.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="assets/ios/splash.png"     gap:platform="ios"     width="1024" height="768" />
    
	

</widget>